<div class="top-bottom-margin">
  <%= link_to "Add a Picture", "/pictures/new", {:class => "btn btn-default bottom-margin"} %>
</div>
<div class="row top-bottom-margin">
<% @pictures.each do |picture| %>
<div class="col-xs-12 col-sm-6 col-md-4 text-center image-in-grid">
  <h4><%= picture[:title] %></h4>
  <p><%= picture[:artist] %></p>
  <%= link_to image_tag(picture.url), "/pictures/#{picture.id}" %>
</div>
<% end %>
</div>